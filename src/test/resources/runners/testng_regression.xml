<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Saucedemo Automation Suite" verbose="4"
	parallel="tests" thread-count="10">

	<listeners>
		<listener class-name="com.qa.saucedemo.listeners.ExtentReportListener" />
		<listener class-name="com.qa.saucedemo.listeners.AllureReportListener" />
	</listeners>

	<test name="Login Page Test">
		<classes>
			<class name="com.qa.saucedemo.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Inventory Page Test">
		<classes>
			<class name="com.qa.saucedemo.tests.InventoryPageTest" />
		</classes>
	</test>

	<test name="Product Cart Page Test">
		<classes>
			<class name="com.qa.saucedemo.tests.ProductCartPageTest" />
		</classes>
	</test>

	<test name="Checkout Info Page Test">
		<classes>
			<class name="com.qa.saucedemo.tests.CheckoutInfoPageTest" />
		</classes>
	</test>

	<test name="Checkout Overview Page Test">
		<classes>
			<class name="com.qa.saucedemo.tests.CheckoutOverviewPageTest" />
		</classes>
	</test>

	<test name="Checkout Complete Page Test">
		<classes>
			<class name="com.qa.saucedemo.tests.CheckoutCompletePageTest" />
		</classes>
	</test>

</suite>